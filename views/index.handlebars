<img src="/assets/img/burger.png" alt="Burger">

<h2>Eat-Da-Burger!</h2>

<ul id="burger-list">
  {{#each burgers}}
    {{#unless this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
          <button type="submit">Devour It!</button>
        </form>
      </li>
    {{/unless}}
  {{/each}}
</ul>

<ul id="devour-list">
  {{#each burgers}}
    {{#if this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="false">
        </form>
      </li>
    {{/if}}
  {{/each}}
</ul>

<form class="create-update-form" action="burgers/create" method="POST">

  <div class="form-group">
    <input type="text" id="bu" name="burger_name">
  </div>

  <button type="submit">Submit</button>
</form>

<h4>Enter a burger you want to eat Click the "Submit" button</h4>